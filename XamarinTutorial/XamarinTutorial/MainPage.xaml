<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinTutorial"
             x:Class="XamarinTutorial.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="blueColor">#1E90FF</Color>
        </ResourceDictionary>
        <Color x:Key="blueColor">#1E90FF</Color>
    </ContentPage.Resources>
    <StackLayout VerticalOptions="Center" Margin="20">
        <Entry x:Name="entryEmail" Placeholder="Email Address" Keyboard="Email"/>
        <Entry x:Name="entryPassword" Placeholder="Password" IsPassword="True"/>
        <Button x:Name="btnLogin" Text="Log in" 
                Margin="0, 50, 0, 0"
                Clicked="btnLoginClicked" 
                BackgroundColor="{StaticResource blueColor}"
                TextColor="White"/>
    </StackLayout>

</ContentPage>
